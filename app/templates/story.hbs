{{#each this}}
    <section class="panel">
        <div id="section{{@index}}" data-parent="#categories-container" class="collapse">
          {{#each this}}
              <article class="row" style="background-image: url('images/stories/{{imgSrc}}')">
                    <!--description of the image being used-->
                    {{#if imgDesc}}
                        <figcaption>
                          {{{imgDesc}}}
                        </figcaption>
                    {{/if}}
                      <div class="text-box col-md-6 col-md-offset-3">
                        {{#if title}}
                            <h3>
                              {{title}} {{#if date}}<span>{{date}}</span>{{/if}}
                            </h3>
                        {{/if}}
                          <p>{{{text}}}</p>
                      </div>
              </article>
          {{/each}}
        </div>
    </section>
{{/each}}