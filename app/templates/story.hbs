{{#each this}}
    <section class="panel">
        <div id="section-num-{{@index}}" data-parent="#categories-container" class="collapse">
          {{#each this}}
              <article class="row">
                  <!--BACKGROUND COVER, Y U SUCK SO MUCH ON MOBILE???-->
                  <div class="background" style="background-image: url('images/stories/{{imgSrc}}')"></div>
                  <!--description of the image being used-->
                {{#if imgDesc}}
                    <figcaption>
                      {{{imgDesc}}}
                    </figcaption>
                {{/if}}
                    <header class="text-box col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                      {{#if title}}
                          <h1>
                            {{{title}}} {{#if date}}<span>{{date}}</span>{{/if}}
                          </h1>
                      {{/if}}
                        <h2>{{{text}}}</h2>
                    </header>
              </article>
          {{/each}}
        </div>
    </section>
{{/each}}